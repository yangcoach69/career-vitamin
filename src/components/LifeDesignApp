import React, { useState, useRef } from 'react';
// ì•„ì´ì½˜ì´ ì—†ìœ¼ë©´ ì—ëŸ¬ê°€ ë‚˜ë¯€ë¡œ, lucide-reactì—ì„œ í™•ì‹¤íˆ ìˆëŠ” ì•„ì´ì½˜ë“¤ë§Œ ê°€ì ¸ì˜µë‹ˆë‹¤.
import { 
  Sun, ChevronLeft, Loader2, Download, 
  Plus, Trash2, PieChart, PenTool, CheckCircle2, AlertTriangle, Lightbulb
} from 'lucide-react';
import { fetchGemini, saveAsPng, saveAsPdf } from '../api';
import { Toast, EditableContent, Footer } from './SharedUI';

// ----------------------------------------------------------------------
// [ì¤‘ìš” 1] ê¸°ë³¸ ì„¤ì • ë°ì´í„° (ì´ ë¶€ë¶„ì´ ëˆ„ë½ë˜ë©´ ì—ëŸ¬ê°€ ë‚©ë‹ˆë‹¤!)
const DEFAULT_AREAS = [
  { id: 'work', label: 'ì—…(æ¥­)', eng: 'Work', score: 5, note: '' },
  { id: 'growth', label: 'ìê¸°ì„±ì¥', eng: 'Self-Growth', score: 5, note: '' },
  { id: 'contribution', label: 'ì‚¬íšŒê³µí—Œ', eng: 'Contribution', score: 5, note: '' },
  { id: 'family', label: 'ê°€ì¡±', eng: 'Family', score: 5, note: '' },
  { id: 'relation', label: 'ì‚¬íšŒì  ê´€ê³„', eng: 'Relationship', score: 5, note: '' },
  { id: 'material', label: 'ë¬¼ì ì†Œìœ ', eng: 'Possession', score: 5, note: '' },
  { id: 'finance', label: 'ì¬ë¬´', eng: 'Finance', score: 5, note: '' },
  { id: 'leisure', label: 'ì—¬ê°€', eng: 'Leisure', score: 5, note: '' },
];

// ----------------------------------------------------------------------
// [ì¤‘ìš” 2] ë°©ì‚¬í˜• ì°¨íŠ¸ ì»´í¬ë„ŒíŠ¸ (ì´ í•¨ìˆ˜ë„ ë°˜ë“œì‹œ ìˆì–´ì•¼ í•©ë‹ˆë‹¤!)
const RadarChart = ({ data, size = 300 }) => {
  if (!data || data.length === 0) return null; // ë°ì´í„° ë³´í˜¸

  const center = size / 2;
  const radius = (size / 2) - 40; // ë¼ë²¨ ê³µê°„ í™•ë³´
  const total = data.length;
  const angleSlice = (Math.PI * 2) / total;

  // ì¢Œí‘œ ê³„ì‚° í•¨ìˆ˜
  const getCoordinates = (value, index) => {
    const angle = index * angleSlice - Math.PI / 2; // -90ë„(12ì‹œ ë°©í–¥)ë¶€í„° ì‹œì‘
    const r = (value / 10) * radius; // 10ì  ë§Œì  ê¸°ì¤€
    return {
      x: center + r * Math.cos(angle),
      y: center + r * Math.sin(angle)
    };
  };

  // 1. ê·¸ë¦¬ë“œ(ê±°ë¯¸ì¤„) ì¢Œí‘œ ê³„ì‚°
  const levels = [2, 4, 6, 8, 10];
  const gridPaths = levels.map(level => {
    const points = data.map((_, i) => {
      const { x, y } = getCoordinates(level, i);
      return `${x},${y}`;
    }).join(' ');
    return { level, points };
  });

  // 2. ì¶•(Axis) ì„  ì¢Œí‘œ
  const axisLines = data.map((_, i) => {
    const start = { x: center, y: center };
    const end = getCoordinates(10, i);
    return { start, end };
  });

  // 3. ì‹¤ì œ ë°ì´í„° ì˜ì—­ ì¢Œí‘œ
  const dataPoints = data.map((d, i) => {
    const { x, y } = getCoordinates(d.score, i);
    return `${x},${y}`;
  }).join(' ');

  // 4. ë¼ë²¨ ìœ„ì¹˜
  const labels = data.map((d, i) => {
    const angle = i * angleSlice - Math.PI / 2;
    const r = radius + 25; // ì°¨íŠ¸ ë°”ê¹¥ìª½
    const x = center + r * Math.cos(angle);
    const y = center + r * Math.sin(angle);
    return { ...d, x, y };
  });

  return (
    <svg width={size} height={size} className="overflow-visible mx-auto font-sans" style={{ maxWidth: '100%' }}>
      {/* ë°°ê²½ ê·¸ë¦¬ë“œ */}
      {gridPaths.map((g, i) => (
        <polygon 
          key={i} 
          points={g.points} 
          fill="none" 
          stroke="#e2e8f0" 
          strokeWidth="1" 
          strokeDasharray="4 4"
        />
      ))}
      
      {/* ì¤‘ì‹¬ ì¶• ì„  */}
      {axisLines.map((l, i) => (
        <line 
          key={i} 
          x1={l.start.x} y1={l.start.y} 
          x2={l.end.x} y2={l.end.y} 
          stroke="#e2e8f0" 
          strokeWidth="1" 
        />
      ))}

      {/* ë°ì´í„° ì˜ì—­ */}
      <polygon 
        points={dataPoints} 
        fill="rgba(245, 158, 11, 0.2)" 
        stroke="#d97706" 
        strokeWidth="2" 
      />

      {/* ë°ì´í„° í¬ì¸íŠ¸ */}
      {data.map((d, i) => {
        const coords = getCoordinates(d.score, i);
        return (
          <circle 
            key={i} 
            cx={coords.x} cy={coords.y} 
            r="4" 
            fill="#d97706" 
            stroke="white" 
            strokeWidth="2"
          />
        );
      })}

      {/* ë¼ë²¨ */}
      {labels.map((l, i) => (
        <g key={i}>
            <text 
            x={l.x} y={l.y} 
            textAnchor="middle" 
            dominantBaseline="middle" 
            className="text-[10px] font-bold fill-slate-600"
            >
            {l.label}
            </text>
            <text 
            x={l.x} y={l.y + 12} 
            textAnchor="middle" 
            dominantBaseline="middle" 
            className="text-[8px] fill-slate-400 uppercase"
            >
            {l.eng}
            </text>
        </g>
      ))}
    </svg>
  );
};

// ----------------------------------------------------------------------
// [ë©”ì¸ ì»´í¬ë„ŒíŠ¸]
export default function LifeDesignApp({ onClose }) {
  const [areas, setAreas] = useState(DEFAULT_AREAS);
  const [customAreaInput, setCustomAreaInput] = useState('');
  
  const [result, setResult] = useState(null);
  const [loading, setLoading] = useState(false);
  const [toastMsg, setToastMsg] = useState(null);
  const reportRef = useRef(null);

  const showToast = (msg) => setToastMsg(msg);

  const handleScoreChange = (index, val) => {
    const newAreas = [...areas];
    newAreas[index].score = parseInt(val);
    setAreas(newAreas);
  };

  const handleNoteChange = (index, val) => {
    const newAreas = [...areas];
    newAreas[index].note = val;
    setAreas(newAreas);
  };

  const addCustomArea = () => {
    if (!customAreaInput.trim()) return showToast("ì¶”ê°€í•  ì˜ì—­ ì´ë¦„ì„ ì…ë ¥í•˜ì„¸ìš”.");
    if (areas.length >= 10) return showToast("ììœ  ì˜ì—­ì€ ìµœëŒ€ 2ê°œê¹Œì§€ë§Œ ì¶”ê°€ ê°€ëŠ¥í•©ë‹ˆë‹¤."); 
    setAreas([...areas, { id: `custom_${Date.now()}`, label: customAreaInput, eng: 'Custom', score: 5, note: '' }]);
    setCustomAreaInput('');
  };

  const removeCustomArea = (index) => {
    const newAreas = areas.filter((_, i) => i !== index);
    setAreas(newAreas);
  };

  const handleGenerate = async () => {
    setLoading(true);
    try {
      const inputSummary = areas.map(a => `- ${a.label}(${a.score}ì ): ${a.note || 'íŠ¹ì´ì‚¬í•­ ì—†ìŒ'}`).join('\n');
      const prompt = `
      ë‹¹ì‹ ì€ 4050 ì¤‘ì¥ë…„ ëŒ€ìƒì˜ ìƒì• ì„¤ê³„(Life Design) ì „ë¬¸ ì½”ì¹˜ì…ë‹ˆë‹¤.
      ì‚¬ìš©ìê°€ ì…ë ¥í•œ 'ì¸ìƒ 8ëŒ€ ì˜ì—­(+ì•ŒíŒŒ)'ì˜ ì ìˆ˜ì™€ ìƒíƒœ ë©”ëª¨ë¥¼ ë¶„ì„í•˜ì—¬ ì½”ì¹­ ë¦¬í¬íŠ¸ë¥¼ ì‘ì„±í•´ì£¼ì„¸ìš”.

      [ì‚¬ìš©ì ì…ë ¥ ë°ì´í„°]
      ${inputSummary}

      [ë¶„ì„ ìš”ì²­ì‚¬í•­]
      1. ì ìˆ˜ê°€ ë†’ì€ ì˜ì—­(ìƒìœ„ 3ê°œ ë‚´ì™¸)ì„ ë¬¶ì–´ì„œ ì¹­ì°¬í•˜ê³ , í˜„ì¬ì˜ ë§Œì¡±ê°ì„ ìœ ì§€/ê°•í™”í•˜ê¸° ìœ„í•œ ì¡°ì–¸ì„ í•´ì£¼ì„¸ìš”.
      2. ì ìˆ˜ê°€ ë‚®ì€ ì˜ì—­(í•˜ìœ„ 3ê°œ ë‚´ì™¸)ì„ ë¬¶ì–´ì„œ ìœ„ë¡œí•˜ê³ , ê· í˜•ì„ ë§ì¶”ê¸° ìœ„í•´ ë‹¹ì¥ ì‹œì‘í•  ìˆ˜ ìˆëŠ” ì‘ì€ ì•¡ì…˜ í”Œëœì„ ì œì•ˆí•˜ì„¸ìš”.
      3. ì „ë°˜ì ì¸ ì‚¶ì˜ ê· í˜• ìƒíƒœ(Balance)ì— ëŒ€í•œ ì´í‰ì„ ë‚¨ê²¨ì£¼ì„¸ìš”.

      [JSON ì¶œë ¥ í˜•ì‹ ì¤€ìˆ˜]
      {
        "high_satisfaction": {
          "title": "ì‚¶ì˜ í™œë ¥ì†Œê°€ ë˜ëŠ” ì˜ì—­ë“¤ (ê°•ì )",
          "summary": "ë†’ì€ ì ìˆ˜ë¥¼ ë°›ì€ ì˜ì—­ë“¤ì— ëŒ€í•œ ìš”ì•½ ë¶„ì„ (í•œ ë¬¸ë‹¨)",
          "coaching": "ì´ ë§Œì¡±ê°ì„ ê³„ì† ìœ ì§€í•˜ê³  ì‚¶ì˜ ì—ë„ˆì§€ë¡œ ì‚¼ê¸° ìœ„í•œ ì½”ì¹­ ë©”ì‹œì§€"
        },
        "low_satisfaction": {
          "title": "ë” ì±„ì›Œê°€ë©´ ì¢‹ì„ ì˜ì—­ë“¤ (ë³´ì™„)",
          "summary": "ë‚®ì€ ì ìˆ˜ë¥¼ ë°›ì€ ì˜ì—­ë“¤ì— ëŒ€í•œ ìš”ì•½ ë¶„ì„ (í•œ ë¬¸ë‹¨)",
          "coaching": "ë¶€ë‹´ ê°–ì§€ ì•Šê³  ì¡°ê¸ˆì”© ê°œì„ í•˜ê¸° ìœ„í•œ êµ¬ì²´ì ì¸ ê°€ì´ë“œ ë° ê²©ë ¤ ë©”ì‹œì§€"
        },
        "overall_review": "ì „ì²´ì ì¸ ìƒì•  ê· í˜•ì— ëŒ€í•œ ì´í‰ ë° ì‘ì› ë©”ì‹œì§€ (ë‘ê´„ì‹)"
      }`;

      const parsed = await fetchGemini(prompt);
      setResult(parsed);
    } catch (e) { showToast(e.message); } finally { setLoading(false); }
  };

  const handleEdit = (section, key, value) => {
    setResult(prev => {
      const newData = { ...prev };
      if (key) newData[section][key] = value;
      else newData[section] = value;
      return newData;
    });
  };

  const handleDownload = () => saveAsPng(reportRef, `ìƒì• ì„¤ê³„_8ëŒ€ì˜ì—­_ì§„ë‹¨`, showToast);
  const handlePdfDownload = () => saveAsPdf(reportRef, `ìƒì• ì„¤ê³„_8ëŒ€ì˜ì—­_ì§„ë‹¨`, showToast);

  return (
    <div className="fixed inset-0 bg-slate-100 z-50 flex flex-col font-sans text-slate-800">
      {toastMsg && <Toast message={toastMsg} onClose={() => setToastMsg(null)} />}
      
      {/* í—¤ë” */}
      <header className="bg-amber-900 text-white p-4 flex justify-between items-center shadow-md shrink-0">
        <div className="flex items-center gap-3">
          <Sun className="text-amber-400"/>
          <h1 className="font-bold text-lg">ì¸ìƒ 8ëŒ€ ì˜ì—­ ì„¤ê³„ (Life Balance)</h1>
        </div>
        <button onClick={onClose} className="flex items-center text-sm hover:text-amber-200 transition-colors">
          <ChevronLeft className="w-5 h-5 mr-1"/> ëŒì•„ê°€ê¸°
        </button>
      </header>

      <div className="flex flex-1 overflow-hidden">
        {/* ì‚¬ì´ë“œë°”: ì…ë ¥ì°½ */}
        <aside className="w-[400px] bg-white border-r p-6 shrink-0 overflow-y-auto">
          <div className="space-y-8">
            <div className="bg-amber-50 p-4 rounded-lg border border-amber-100 text-sm text-amber-900">
                <strong>ğŸ’¡ ì‘ì„± ê°€ì´ë“œ</strong><br/>
                ê° ì˜ì—­ì˜ í˜„ì¬ ë§Œì¡±ë„(1~10ì )ë¥¼ ì„ íƒí•˜ê³ , 
                í˜„ì¬ì˜ ê³ ë¯¼ì´ë‚˜ ìƒíƒœë¥¼ ì§§ê²Œ ë©”ëª¨í•´ì£¼ì„¸ìš”.
            </div>

            <div className="space-y-6">
                {areas.map((area, index) => (
                    <div key={area.id} className="relative animate-in fade-in slide-in-from-left-4" style={{animationDelay: `${index * 50}ms`}}>
                        <div className="flex justify-between items-center mb-2">
                            <label className="font-bold text-slate-700 flex items-center gap-2">
                                {index < 8 ? <span className="w-5 h-5 rounded-full bg-slate-100 text-slate-500 flex items-center justify-center text-xs">{index+1}</span> : <span className="w-5 h-5 rounded-full bg-indigo-100 text-indigo-500 flex items-center justify-center text-xs">+</span>}
                                {area.label} <span className="text-xs text-slate-400 font-normal uppercase ml-1">{area.eng}</span>
                            </label>
                            <span className={`font-bold text-lg ${area.score >= 8 ? 'text-amber-600' : area.score <= 4 ? 'text-slate-400' : 'text-slate-700'}`}>
                                {area.score}ì 
                            </span>
                        </div>
                        
                        <input 
                            type="range" min="1" max="10" value={area.score}
                            onChange={(e) => handleScoreChange(index, e.target.value)}
                            className="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-amber-600 mb-3"
                        />

                        <textarea
                            value={area.note}
                            onChange={(e) => handleNoteChange(index, e.target.value)}
                            placeholder={`${area.label} ê´€ë ¨ í˜„ì¬ ìƒíƒœë‚˜ ê³ ë¯¼ì€?`}
                            className="w-full p-2 text-sm border border-slate-200 rounded-lg focus:ring-2 focus:ring-amber-500 outline-none resize-none h-16 bg-slate-50 focus:bg-white transition-colors"
                        />

                        {index >= 8 && (
                            <button onClick={() => removeCustomArea(index)} className="absolute -right-2 -top-2 bg-red-100 text-red-500 p-1 rounded-full hover:bg-red-200">
                                <Trash2 size={12}/>
                            </button>
                        )}
                    </div>
                ))}
            </div>

            {areas.length < 10 && (
                <div className="pt-4 border-t border-slate-200">
                    <label className="block text-xs font-bold text-slate-500 mb-2">ììœ  ì˜ì—­ ì¶”ê°€ (ì„ íƒ, ìµœëŒ€ 2ê°œ)</label>
                    <div className="flex gap-2">
                        <input 
                            value={customAreaInput}
                            onChange={(e) => setCustomAreaInput(e.target.value)}
                            placeholder="ì˜ˆ: ì¢…êµ, ë´‰ì‚¬í™œë™"
                            className="flex-1 p-2 border rounded-lg text-sm"
                            onKeyPress={(e) => e.key === 'Enter' && addCustomArea()}
                        />
                        <button onClick={addCustomArea} className="bg-slate-800 text-white px-3 py-2 rounded-lg hover:bg-slate-700"><Plus size={16}/></button>
                    </div>
                </div>
            )}

            <button onClick={handleGenerate} disabled={loading} className="w-full bg-amber-700 text-white py-4 rounded-xl font-bold shadow-lg hover:bg-amber-800 transition-all disabled:bg-slate-400 text-lg flex items-center justify-center gap-2">
              {loading ? <Loader2 className="animate-spin"/> : <><PieChart size={20}/> ë°¸ëŸ°ìŠ¤ ì§„ë‹¨í•˜ê¸°</>}
            </button>
          </div>
        </aside>

        {/* ê²°ê³¼ ë¦¬í¬íŠ¸ í™”ë©´ */}
        <main className="flex-1 p-8 overflow-y-auto flex justify-center bg-slate-50">
            <div ref={reportRef} className="w-[210mm] min-h-[297mm] h-fit bg-white shadow-2xl p-12 flex flex-col animate-in fade-in zoom-in-95 duration-500">
              <div className="border-b-4 border-amber-600 pb-6 mb-8 flex justify-between items-end">
                <div>
                    <span className="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-xs font-bold tracking-wider mb-3 inline-block">LIFE BALANCE REPORT</span>
                    <h1 className="text-4xl font-extrabold text-slate-900">ì¸ìƒ 8ëŒ€ ì˜ì—­ ë°¸ëŸ°ìŠ¤</h1>
                </div>
                <div className="text-right">
                    <div className="text-xs text-slate-400 font-bold mb-1">DATE</div>
                    <div className="text-lg font-bold text-slate-700">{new Date().toLocaleDateString()}</div>
                </div>
              </div>

              <div className="mb-10 flex flex-col items-center justify-center bg-slate-50 rounded-2xl p-8 border border-slate-100">
                  <h3 className="text-lg font-bold text-slate-700 mb-6 flex items-center gap-2"><PieChart className="text-amber-500"/> ë‚˜ì˜ ìƒì•  ê· í˜•ë„</h3>
                  <RadarChart data={areas} size={360} />
                  
                  {result && (
                      <div className="mt-8 text-center max-w-2xl bg-white p-6 rounded-xl border border-amber-100 shadow-sm">
                          <h4 className="font-bold text-amber-800 mb-2">ğŸ’¡ Overall Review</h4>
                          <EditableContent className="text-slate-700 leading-relaxed font-medium" value={result.overall_review} onSave={(v)=>handleEdit('overall_review', null, v)} />
                      </div>
                  )}
              </div>

              {result ? (
                <div className="space-y-8">
                    <section className="bg-green-50 p-6 rounded-2xl border border-green-100">
                        <h3 className="text-xl font-bold text-green-800 mb-4 flex items-center gap-2 border-b border-green-200 pb-3">
                            <CheckCircle2 className="text-green-600"/> <EditableContent value={result.high_satisfaction.title} onSave={(v)=>handleEdit('high_satisfaction', 'title', v)} />
                        </h3>
                        <div className="space-y-4">
                            <div>
                                <strong className="text-sm text-green-700 block mb-1">Status Summary</strong>
                                <EditableContent className="text-slate-700 text-sm leading-relaxed bg-white p-3 rounded-lg border border-green-100" value={result.high_satisfaction.summary} onSave={(v)=>handleEdit('high_satisfaction', 'summary', v)} />
                            </div>
                            <div>
                                <strong className="text-sm text-green-700 block mb-1">Coaching Message</strong>
                                <div className="flex gap-3 bg-white p-4 rounded-lg border border-green-100 shadow-sm">
                                    <div className="shrink-0 pt-1"><PenTool size={16} className="text-green-500"/></div>
                                    <EditableContent className="text-slate-700 text-sm leading-relaxed" value={result.high_satisfaction.coaching} onSave={(v)=>handleEdit('high_satisfaction', 'coaching', v)} />
                                </div>
                            </div>
                        </div>
                    </section>

                    <section className="bg-red-50 p-6 rounded-2xl border border-red-100">
                        <h3 className="text-xl font-bold text-red-800 mb-4 flex items-center gap-2 border-b border-red-200 pb-3">
                            <AlertTriangle className="text-red-600"/> <EditableContent value={result.low_satisfaction.title} onSave={(v)=>handleEdit('low_satisfaction', 'title', v)} />
                        </h3>
                        <div className="space-y-4">
                            <div>
                                <strong className="text-sm text-red-700 block mb-1">Status Summary</strong>
                                <EditableContent className="text-slate-700 text-sm leading-relaxed bg-white p-3 rounded-lg border border-red-100" value={result.low_satisfaction.summary} onSave={(v)=>handleEdit('low_satisfaction', 'summary', v)} />
                            </div>
                            <div>
                                <strong className="text-sm text-red-700 block mb-1">Coaching Message (Action Plan)</strong>
                                <div className="flex gap-3 bg-white p-4 rounded-lg border border-red-100 shadow-sm">
                                    <div className="shrink-0 pt-1"><Lightbulb size={16} className="text-red-500"/></div>
                                    <EditableContent className="text-slate-700 text-sm leading-relaxed" value={result.low_satisfaction.coaching} onSave={(v)=>handleEdit('low_satisfaction', 'coaching', v)} />
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
              ) : (
                <div className="flex-1 flex flex-col items-center justify-center text-slate-300 py-20">
                    <PieChart size={64} className="mb-4 opacity-20"/>
                    <p className="text-lg font-bold text-slate-400">ì¢Œì¸¡ì—ì„œ ì˜ì—­ë³„ ì§„ë‹¨ì„ ì§„í–‰í•´ì£¼ì„¸ìš”.</p>
                </div>
              )}

              <Footer />
            </div>
        </main>

        {result && (
          <div className="absolute bottom-8 right-8 flex gap-3 z-50">
            <button onClick={handleDownload} className="bg-white text-slate-900 border border-slate-200 px-6 py-3 rounded-full font-bold shadow-xl hover:-translate-y-1 flex items-center transition-transform"><Download className="mr-2" size={20}/> ì´ë¯¸ì§€ ì €ì¥</button>
            <button onClick={handlePdfDownload} className="bg-amber-800 text-white px-6 py-3 rounded-full font-bold shadow-xl hover:-translate-y-1 flex items-center transition-transform"><Download className="mr-2" size={20}/> PDF ì €ì¥</button>
          </div>
        )}
      </div>
    </div>
  );
}